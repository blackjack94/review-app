<% provide :title, @user.name %>
<div class='row'>
  <aside class='span4'>
  	<section id='special'>
  	  <h1>
  	    <%= gravatar_for @user, size: 100 %>
  	    <%= @user.name %>
  	  </h1>
      <%= render 'follow_form' %>
  	</section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class='span8'>
  	<% if @user.tweets.any? %>
	  <h3>Tweeted (<%= @user.tweets.count %>)</h3>
	  <ol class='tweets'>
	  	<%= render @tweets %>
	  </ol>
	  <%= will_paginate @tweets %>
	<% else %>
	  <h3>Opps, no tweets!</h3>
	<% end %>
  </div>
</div>